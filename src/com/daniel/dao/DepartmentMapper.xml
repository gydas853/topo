<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.daniel.dao.DepartmentMapper">

    <insert id="addDepartment">
        insert into department (d_name) values (#{d_name});
    </insert>

    <update id="updateDepartment">
        update department set d_name = #{d_name} where d_id = #{d_id};
    </update>

    <delete id="deleteDepartment">
        delete from department where d_id = #{d_id};
    </delete>

    <select id="listAll" resultType="com.daniel.model.Department">
        select * from department;
    </select>

    <select id="getDepartment" resultType="com.daniel.model.Department">
        select * from department where d_id = #{d_id};
    </select>
</mapper>