<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.daniel.dao.PositionMapper">

    <insert id="addPosition">
        insert into position (p_name) values (#{p_name});
    </insert>
    <update id="updatePosition">
        update position set p_name = #{p_name} where p_id = #{p_id};
    </update>
    <delete id="deletePosition">
        delete from position where p_id = #{p_id};
    </delete>
    <select id="listAll" resultType="com.daniel.model.Position">
        select * from position;
    </select>
    <select id="getPosition" resultType="com.daniel.model.Position">
        select * from position where p_id = #{p_id};
    </select>
</mapper>